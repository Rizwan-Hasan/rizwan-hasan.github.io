{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Hugo Dev Server",
            "type": "shell",
            "command": "${workspaceFolder}/.hugo-bin/hugo",
            "args": [
                "server",
                "--disableFastRender",
            ],
            "problemMatcher": []
        },
        {
            "label": "Hugo Build",
            "type": "shell",
            "command": "${workspaceFolder}/.hugo-bin/hugo",
            "args": [
                "--gc",
                "--minify",
                "-d",
                "docs",
            ],
            "problemMatcher": []
        },
    ]
}
